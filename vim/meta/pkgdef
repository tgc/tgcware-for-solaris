pkgdesc="An improved almost compatible version of Vi"
pkgver="$pkgver"
files(-,root,bin)
$_bindir/gvim
$_bindir/gvimdiff
$_bindir/gview
$_mandir/man1/g*
$_sharedir/applications
$_sharedir/icons

