[vim]
pkgname="${pkgprefix}${topdir}"
name="Vim - Vi IMproved"
pkgcat="application"
pkgvendor="http://www.vim.org"
pkgdesc="An improved almost compatible version of Vi"
pkgver="$pkgver"
files(-,root,bin)
default_docs
$_bindir/ex
$_bindir/rview
$_bindir/rvim
$_bindir/view
$_bindir/vim
$_bindir/vimdiff
$_bindir/vimtutor
$_bindir/xxd
$_sharedir/vim
$_mandir/man1/evim*
$_mandir/man1/ex*
$_mandir/man1/rview*
$_mandir/man1/rvim*
$_mandir/man1/view*
$_mandir/man1/vim*
$_mandir/man1/xxd*

